{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2019", "dom"],
      "target": "es5",
      "sourceMap": true,
      "outDir": "./dist",
      "incremental": true,

      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,

      "noUnusedLocals": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
  }
